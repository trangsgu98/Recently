@page
@model Examining.Pages.Login.Departments.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Department</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Department.DeptId" />
            <div class="form-group">
                <label asp-for="Department.DeptName" class="control-label"></label>
                <input asp-for="Department.DeptName" class="form-control" />
                <span asp-validation-for="Department.DeptName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Department.DoctorHead" class="control-label"></label>
                <select asp-for="Department.DoctorHead" class="form-control"
                        asp-items="@Model.Names">
                    <option value="">-- Select Doctor Head --</option>
                </select>
                <span asp-validation-for="Department.DoctorHead" class="text-danger" />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
