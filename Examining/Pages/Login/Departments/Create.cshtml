@page
@model Examining.Pages.Login.Departments.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Departmet</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Department.DeptId" class="control-label"></label>
                <input asp-for="Department.DeptId" class="form-control" />
                <span asp-validation-for="Department.DeptId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Department.DeptName" class="control-label"></label>
                <input asp-for="Department.DeptName" class="form-control" />
                <span asp-validation-for="Department.DeptName" class="text-danger"></span>
            </div>

             <div class="form-group">
                <label asp-for="Department.DoctorHead" class="control-label"></label>
                <select asp-for="Department.DoctorHead" class="form-control"
                        asp-items="@Model.Names">
                    <option value="">-- Select Doctor Head --</option>
                </select>
                <span asp-validation-for="Department.DoctorHead" class="text-danger" />
            </div>


            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
